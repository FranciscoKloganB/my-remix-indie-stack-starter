{
  "author": "Francisco Teixeira de Barros, Sofia Ferreira Lopes da Silva Santos",
  "description": "Expense tracker for you and your house companions",
  "homepage": "https://github.com/FranciscoKloganB/greencouch",
  "name": "greencouch",
  "private": true,
  "sideEffects": false,
  "version": "0.0.1",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "preformat": "eslint --fix --ext js --ext jsx --ext ts --ext tsx .",
    "format": "prettier --write \"**/*.{css,json,js,jsx,prisma,sass,scss,ts,tsx}\"",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prepare": "husky install && chmod ug+x .husky/*",
    "prisma:push": "npx prisma db push",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:seed": "npx prisma db seed",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "up": "taze major ",
    "up:install": "taze major --install"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@remix-run/server-runtime": "^1.7.5",
    "bcryptjs": "^2.4.3",
    "i18next": "^22.0.4",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.0.0",
    "i18next-http-backend": "^2.0.1",
    "isbot": "^3.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "remix-i18next": "^4.1.1",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@faker-js/faker": "^7.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@remix-run/dev": "^1.7.5",
    "@remix-run/eslint-config": "^1.7.5",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.10",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.24.5",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "binode": "^1.0.5",
    "c8": "^7.12.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^10.11.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.6.7",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "kill-port": "^2.0.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.47.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-focus-visible": "^7.1.0",
    "postcss-import": "^15.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-prisma": "^4.4.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.5.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "storybook": "^6.5.13",
    "storybook-css-modules-preset": "^1.1.1",
    "storybook-react-i18next": "^1.1.2",
    "tailwindcss": "^3.2.3",
    "taze": "^0.8.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.5"
  },
  "engines": {
    "node": ">=16.16.0",
    "npm": ">=8.19.2",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "resolutions": {
    "webpack": "^5"
  }
}
