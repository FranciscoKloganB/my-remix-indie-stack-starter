{
  "exclude": [
    "build",
    "coverage",
    "coverage-db",
    "cypress",
    "cypress.config.ts",
    "node_modules",
    "public",
    "storybook-static",
    "tailwind.config.js"
  ],
  "include": ["remix.env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019",
    "types": ["vitest/globals"],

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
